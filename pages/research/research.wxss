.container {
	flex: 1;
  display: flex;
  flex-direction: column;
 	box-sizing: border-box;
}

.container-body { flex: 1; overflow-x: hidden; overflow-y: auto;}

.report-list { margin: 0 30rpx;}
.report-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: top;
  padding:30rpx 0;
  font-size: 28rpx;
  color: #353535;
  border-bottom:#f5f5f5 solid 1px;
}

.report-item-left { height: 156rpx; overflow: hidden;}

.report-item-pic { width: 236rpx;}

.report-item-right { margin-left: 20rpx;flex: 1;}

.report-item-name { display: block; line-height: 1.3; height: 3.9em; overflow: hidden; text-align: justify; text-justify:inter-ideograph;}

.report-item-time { display: block; color: #888; margin-top: 15rpx;font-size: 24rpx;}

.search { padding: 20rpx 30rpx; background-color: #efeff4; border-bottom: #d6d6db solid 1px;}
.search .in {display: flex;  flex-direction: row; position: relative;}
/* .search .ico { position: absolute; top: 16rpx; left: 10rpx;} */
.search .ipt { flex: 1; background-color: #fff; border: #eaeaef solid 1px; border-radius: 4px; padding: 0 54rpx; height: 60rpx;}
.search .btn { line-height: 62rpx; color: #00c203; background-color: transparent; margin-right: -30rpx;}
.search .btn::after { display: none;}


page { background-color: #f7f7f7; font-family: 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;}
.data-list {}
.list-item { background-color: #fff; margin-bottom: .55rem; box-shadow: 0 1px 1px rgba(0,0,0,.05); font-size: 1.2rem;}
.list-item:last-child { box-shadow: none; margin-bottom: 0;}
.item-pic {}
.item-pic image { width: 100%; vertical-align: middle; background-color: #eee;
/* height: 8.48rem; */
height: 42.4vw;
}
.item-cont { padding: .85rem .8rem;}
.item-tit { color: #333; font-size: .935em; line-height: 1.4;display:-webkit-box;overflow:hidden;text-overflow:ellipsis;-webkit-line-clamp:2;-webkit-box-orient:vertical;}
.item-desc { color: #888; text-align: justify; text-justify: inter-ideograph; font-size: .641em; line-height: 1.6; margin-top: .8em;display:-webkit-box;overflow:hidden;text-overflow:ellipsis;-webkit-line-clamp:2;-webkit-box-orient:vertical;}
.item-info { text-align: right; font-size: .55em; color: #bbb; margin-top: .8em;}
.item-info > view { margin-right: 1.5em; display: inline-block; vertical-align: middle;}
.item-info > view:last-child { margin-right: 0;}
.item-time {  display: inline-block;}
.item-flow { display: inline-block; position: relative; background-repeat: no-repeat; background-position: left center; background-size: auto .9em; padding-left: 1.8em;}
.item-flow { background-image: url(data:image/png;base64,)}


.list-item.picRight + .list-item:not(.picRight)::before { content: ''; display: block;box-shadow: inset 0 1px 1px rgba(0,0,0,.05); height: .55rem; left: 0; right: 0; background-color: #f7f7f7; }

.list-item.picRight { display: flex; flex-direction: row-reverse; position: relative; margin-bottom: 0; box-shadow: none; margin-top: 0;}
.list-item.picRight::before { content: ''; height: 1px; background-color: #cacaca; position: absolute; top: 0; left: .8rem; right: .8rem; transform: scaley(.5); transform-origin: center top;}
.list-item.picRight .item-pic { padding: .9rem .8rem .85rem;}
.list-item.picRight .item-pic image { width: 5.36rem; height: 5.36rem;}
.list-item.picRight .item-cont { flex: 1;}
.list-item.picRight .item-info { text-align: left;}
.list-item:not(.picRight) + .list-item.picRight::before,
.list-item.picRight:first-child::before { display: none;}

