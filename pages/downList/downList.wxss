/**index.wxss**/
.container{
  padding-top: 0;
  width: 100%;
overflow-x: hidden;

}
.hint { width: 100%; padding: 40rpx; font-size: 36rpx; text-align: center;background-color: #f4f4f4;}
.item{
    width: 100%;
    height: 156rpx;
    position: relative; 
    display: flex;
    -webkit-transition: all 200ms;
    transition: all 200ms;
}
.downing { opacity: .7; background-color: rgba(0,0,0,.1);}
.item .link { content: ''; position: absolute; left: 0; right: 0; top: 0; bottom: 0; margin: auto; background-color: rgba(0,0,0,.1); z-index: 90;}
.item .link { background-color: transparent; z-index: 95;}
.hr { width: 100%; height: 12rpx; background-color: #f4f4f4;}

.item:first-child{
   margin-top: 0;
}
.item .remove,
.item .cancel{
    width: 60px;
    height: 100%;
    background-color: rgb(242,90,100);
    position: absolute;
    top: 0;
    right: -60px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    color: #fff;
    z-index: 99;
}
.item .inner-remove,
.item .inner-ok,
.item .inner-cancel {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    }
.item .number-wrapper{
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 30rpx 0 20rpx;
}
.item .ok,
.item .cancel{
    width: 60px;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: #69c72b;
    color: #fff;
    font-size: 32rpx;
}
.item .cancel { background-color: rgb(178,180,183);}

.inner-pro { color: #888; font-size: 20rpx;}

.item .picbox { height: 156rpx; overflow: hidden; padding-left: 30rpx;}
.item .img{
    width: 236rpx;
    height: auto;
}
.number-wrapper .name{
    margin: 10rpx 0;
    font-size: 30rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-align:justify;
    text-justify:inter-ideograph;
}


