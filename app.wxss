/**app.wxss**/

page {
	color: #333;
 	font: normal 28rpx/1.5 -apple-system-font, 'Helvetica Neue', Helvetica, 'Microsoft YaHei', sans-serif;
	 background-color: #fff;
	 
}


.gototop{
	width: 70rpx;
	height: 70rpx;
  border-radius: 50%;
	background:#fff url(data:image/png;base64,) no-repeat 50% 50% / 100% auto;
	position: fixed;
	bottom: 20rpx;
	right: 20rpx;
	transition: all 0.3s;
	opacity: 0;
	transform: translateY(200rpx);
  z-index: 999999;
}
.gototop.active{
	opacity: 1;
	transform: translateY(0);
}

.gototop {transform: translateY(0); width: 2rem; height: 2rem; right: .8rem; bottom: .8rem; border-radius: 6rpx; background-color: rgba(76,76,76,.4); background-size: 70% auto; background-image: url(data:image/png;base64,);}




.container {
	flex: 1;
  display: flex;
  flex-direction: column;
 	box-sizing: border-box;
}

.container-body { flex: 1; overflow-x: hidden; overflow-y: auto;}

.block-list { margin: 0 30rpx;}
.block-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: top;
  padding:30rpx 0;
  font-size: 14px;
  color: #353535;
  border-bottom:#f5f5f5 solid 1px;
}

.block-item-left { height: 156rpx; overflow: hidden;}

.block-item-pic { width: 236rpx;}

.block-item-right { margin-left: 20rpx;flex: 1; padding-top: 3px;}

.block-item-name { display: block; line-height: 1.3; height: 3.9em; overflow: hidden; text-align: justify; text-justify:inter-ideograph;}

.block-item-time { display: block; color: #888; margin-top: 15rpx;font-size: 24rpx;}

.search { padding: 20rpx 30rpx; background-color: #efeff4; border-bottom: #d6d6db solid 1px;}
.search .in {display: flex;  flex-direction: row; position: relative;}
.search .ico { position: absolute; top: 16rpx; left: 10rpx;}
.search .ipt { flex: 1; background-color: #fff; border: #eaeaef solid 1px; border-radius: 4px; padding: 0 54rpx; height: 60rpx;}
.search .btn { line-height: 62rpx; color: #00c203; background-color: transparent; margin-right: -30rpx;}
.search .btn::after { display: none;}

.list-loading { padding: 30rpx; background-color: #f5f5f5; text-align: center; font-size: 1.2em;}
.foot-nav { position: fixed; display: flex;flex-direction: row;align-items:center; z-index: 900; bottom: 0; width: 100%; background-color: #f5f5f5; color: #828186; font-size: 22rpx; line-height: 1; height: 102rpx; border-top:#b3b3b3 solid 1rpx;}
.foot-nav navigator { flex: 1;align-items:center; display: flex; flex-direction: column ;justify-content:center;align-self:center; height: 100%;}
.foot-nav .navigator-hover { color: #69c72b;}
.foot-nav image { width: 60rpx; height: 60rpx; }
.foot-nav text {  padding-top: 16rpx;}